<?xml version="1.0"?>
<transfers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="spryker:transfer-01"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Item">
        <property name="configuredBundleItem" type="ConfiguredBundleItem" description="This contains all information related to the configuration of the current item in the configurable bundle" />
        <property name="configuredBundle" type="ConfiguredBundle" />
    </transfer>

    <transfer name="ConfiguredBundle">
        <property name="template" type="ConfigurableBundleTemplate" />
        <property name="quantity" type="int" description="The quantity of the configuration added to the Quote" />
        <property name="groupKey" type="string" description="A unique identifier of a configuration that connects it to its items" />
    </transfer>

    <transfer name="ConfiguredBundleItem">
        <property name="slot" type="ConfigurableBundleTemplateSlot" />
    </transfer>

    <transfer name="ConfigurableBundleTemplate">
        <property name="idConfigurableBundleTemplate" type="int" />
        <property name="uuid" type="string" />
        <property name="name" type="string" />
    </transfer>

    <transfer name="ConfigurableBundleTemplateSlot">
        <property name="idConfigurableBundleTemplateSlot" type="int" />
        <property name="uuid" type="string" />
    </transfer>

</transfers>
