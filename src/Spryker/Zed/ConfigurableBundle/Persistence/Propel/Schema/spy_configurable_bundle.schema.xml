<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ConfigurableBundle\Persistence" package="src.Orm.Zed.ConfigurableBundle.Persistence"
>
    <table name="spy_configurable_bundle_template" phpName="SpyConfigurableBundleTemplate">
        <column name="id_configurable_bundle_template" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="uuid" required="false" type="VARCHAR" size="255"/>
        <column name="name" required="true" type="VARCHAR" size="255"/>

        <unique name="spy_configurable_bundle_template-uuid">
            <unique-column name="uuid"/>
        </unique>

        <behavior name="uuid">
            <parameter name="key_columns" value="id_configurable_bundle_template"/>
        </behavior>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_configurable_bundle_template_pk_seq"/>
    </table>

    <table name="spy_configurable_bundle_template_slot" phpName="SpyConfigurableBundleTemplateSlot">
        <column name="id_configurable_bundle_template_slot" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="uuid" required="false" type="VARCHAR" size="255"/>
        <column name="fk_configurable_bundle_template" type="INTEGER" required="true"/>
        <column name="fk_product_list" type="INTEGER"/>

        <index name="spy_conf_bundle_template_slot-fk_conf_bundle_template">
            <index-column name="fk_configurable_bundle_template"/>
        </index>

        <index name="spy_configurable_bundle_template_slot-fk_product_list">
            <index-column name="fk_product_list"/>
        </index>

        <behavior name="uuid">
            <parameter name="key_columns" value="id_configurable_bundle_template_slot"/>
        </behavior>

        <foreign-key name="spy_conf_bundle_template_slot-fk_conf_bundle_template" foreignTable="spy_configurable_bundle_template">
            <reference foreign="id_configurable_bundle_template" local="fk_configurable_bundle_template"/>
        </foreign-key>

        <foreign-key name="spy_configurable_bundle_template_slot-fk_product_list" foreignTable="spy_product_list">
            <reference foreign="id_product_list" local="fk_product_list"/>
        </foreign-key>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_configurable_bundle_template_slot_pk_seq"/>
    </table>

    <table name="spy_sales_order_configured_bundle" phpName="SpySalesOrderConfiguredBundle">
        <column name="id_sales_order_configured_bundle" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="configurable_bundle_template_uuid" required="true" type="VARCHAR" size="255"/>
        <column name="quantity" required="true" type="INTEGER" default="1"/>
        <column name="name" required="true" type="VARCHAR"/>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_sales_order_configured_bundle_pk_seq"/>
    </table>

    <table name="spy_sales_order_configured_bundle_item" phpName="SpySalesOrderConfiguredBundleItem">
        <column name="id_sales_order_configured_bundle_item" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_sales_order_configured_bundle" type="INTEGER" required="true"/>
        <column name="fk_sales_order_item" type="INTEGER" required="true"/>
        <column name="configurable_bundle_template_slot_uuid" required="true" type="VARCHAR" size="255"/>

        <index name="spy_sales_order_conf_bundle_item-fk_sales_order_conf_bundle">
            <index-column name="fk_sales_order_configured_bundle"/>
        </index>

        <index name="spy_sales_order_configured_bundle_item-fk_sales_order_item">
            <index-column name="fk_sales_order_item"/>
        </index>

        <unique name="spy_sales_order_conf_bundle_item-unique-fk_sales_order_item">
            <unique-column name="fk_sales_order_item"/>
        </unique>

        <foreign-key name="spy_sales_order_conf_bundle_item-fk_sales_order_conf_bundle" foreignTable="spy_sales_order_configured_bundle">
            <reference foreign="id_sales_order_configured_bundle" local="fk_sales_order_configured_bundle"/>
        </foreign-key>

        <foreign-key name="spy_sales_order_configured_bundle_item-fk_sales_order_item" foreignTable="spy_sales_order_item">
            <reference foreign="id_sales_order_item" local="fk_sales_order_item"/>
        </foreign-key>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_sales_order_configured_bundle_item_pk_seq"/>
    </table>

</database>
